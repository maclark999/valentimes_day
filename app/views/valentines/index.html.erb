<table class = "table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Message</th>
    </tr>

  <tbody>
    <% @valentines.each do |valentine| %>
    <tr>
      <td><%= valentine.name %></td>
      <td><%= valentine.message %></td>
      <td class = "text-right">
      <%= link_to 'Nope', valentine, method: :delete, class: "btn btn-warning btn-large" %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
