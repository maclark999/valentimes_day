<div class = "container">
  <%= form_for(@valentine, html: {class: "form-horizontal"}) do |f| %>
    <div class = "form-group">
      <%= f.label :name, class: "col-md-2" %>
        <div class = "col-md-6">
          <%= f.text_field :name, class: "form-control" %>
        </div>
      </div>

      <div class = "form-group">
        <%= f.label :message, class: "col-md-2" %>
        <div class = "col-md-6">
        <%= f.text_area :message, class: "form-control, col-md-4" %>
        </div>
      </div>

      <div class = "form-group">
        <%= f.submit 'Keep it secret. Keep it Safe.', class: "btn btn-success col-md-offset-2" %>

  <% end %>
</div>
